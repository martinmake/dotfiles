#!/bin/sh
alias sudo="sudo " # USE ALIASES WHEN RUNNING COMMANDS THROUGH SUDO
alias ka="killall"
alias history="history 1"
alias finch="export TERM=screen; finch"
alias ghist="history | cut -d' ' -f4- | grep"
alias l="ls -Al"
alias ll="ls -Al"
# alias make="colormake"
alias gdb="gdb -q"
alias avr-gdb="avr-gdb -q"
alias arm-none-eabi-gdb="arm-none-eabi-gdb -q"
alias xtensa-esp32-elf-gdb="xtensa-esp32-elf-gdb -q"
alias st-util="st-util -m"
alias mpv="mpv --input-ipc-server=/tmp/mpvsoc$(date +%s)"
alias calcurse="calcurse -D ~/.config/calcurse"
alias magit="nvim -c Magit"
alias p="sudo pacman"
alias pip="sudo pip"
alias pip2="sudo pip2"
alias pip3="sudo pip3"
alias gem="sudo gem"
alias npm="sudo npm"
alias SS="sudo systemctl"
alias f="fuck"
alias g="git"
alias h="hub"
alias gccp="git commit -m common; git push"
alias trem="transmission-remote"
alias e="$EDITOR"
alias v="$EDITOR"
alias x="sxiv -ft *"
alias sdn="sudo shutdown -h now"
alias gua="git remote | xargs -L1 git push --all"
alias ls="ls -hN --color=auto --group-directories-first"
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias ccat="highlight --force --out-format=ansi"
alias pcat="pygmentize"
alias yt="youtube-dl --add-metadata -i -o '%(upload_date)s-%(title)s.%(ext)s'"
alias yta="yt -x -f bestaudio/best"
alias YT="youtube-viewer"
alias ref="shortcuts >/dev/null; source ~/.config/shortcutrc"
alias upc="sudo pacman -Syu; pkill -RTMIN+8 i3blocks"
alias lsp="pacman -Qett --color=always | less"
alias ffmpeg="ffmpeg -hide_banner"
alias tree="tree -C"
alias demangle="c++filt"

eval "$(thefuck --alias)"

command -v nvim > /dev/null && alias vim="nvim" vimdiff="nvim -d"

shdl() { curl -O $(curl -s http://sci-hub.tw/"$@" | grep location.href | grep -o http.*pdf) ;}
se() { du -a ~/.scripts/* ~/.config/* | awk '{print $2}' | fzf | xargs  -r $EDITOR ;}
sv() { vcopy "$(du -a ~/.scripts/* ~/.config/* | awk '{print $2}' | fzf)" ;}
vf() { fzf | xargs -r -I % $EDITOR % ;}
