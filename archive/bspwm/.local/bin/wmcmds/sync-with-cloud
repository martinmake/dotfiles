#!/usr/bin/env sh

# calendar, todo list, address book
notify-send 'ðŸ”„ SYNCHRONIZING CALENDAR'
notify-send 'ðŸ”„ SYNCHRONIZING TODO LIST'
notify-send 'ðŸ”„ SYNCHRONIZING ADDRESS BOOK'
vdirsyncer discover
vdirsyncer sync
vdirsyncer metasync
mv "$XDG_DATA_HOME/abook/addressbook" "$XDG_DATA_HOME/abook/addressbook~"
i=0
IFS="
"
for entry in $(khard email | tail -n+2 | sed -e 's/  \+/\|/g' -e 's/.$//'); do
	IFS='|' read name type email <<< $entry
	echo -e "[$i]\nname=$name\nemail=$email" >> "$XDG_DATA_HOME/abook/addressbook"
	i=$((i+1))
done

notify-send 'ðŸ”„ SYNCHRONIZING MAIL'
sync-mail

notify-send 'ðŸ”„ SYNCHRONIZING NOTES
joplin sync

notify-send 'âœ” FINISHED SYNCHRONIZING'
